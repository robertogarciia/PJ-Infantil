<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/BackGroundLevelColors1"
        android:layout_width="1353dp"
        android:layout_height="861dp"
        app:srcCompat="@drawable/bosque_hadas_colores_vivos_445983_743"
        tools:layout_editor_absoluteX="-39dp"
        tools:layout_editor_absoluteY="-32dp" />

    <ImageView
        android:id="@+id/BackGroundBigColorLev1"
        android:layout_width="1069dp"
        android:layout_height="631dp"
        app:srcCompat="@drawable/backwhite"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="0dp" />
    //hola

    <ImageView
        android:id="@+id/BackGroundPickColorsCorrectLev1"
        android:layout_width="1584dp"
        android:layout_height="671dp"
        app:layout_constraintTop_toBottomOf="@+id/BackGroundBigColorLev1"
        app:srcCompat="@drawable/backgroundfff"
        tools:layout_editor_absoluteX="-152dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="994dp"
        android:layout_height="592dp"
        app:srcCompat="@drawable/amarillo"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/pickColorBlue"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botoblau"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="649dp" />

    <ImageView
        android:id="@+id/pickColorPurple"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botomorado"
        tools:layout_editor_absoluteX="381dp"
        tools:layout_editor_absoluteY="648dp" />

    <ImageView
        android:id="@+id/pickColorYellow"
        android:layout_width="260dp"
        android:layout_height="134dp"
        app:srcCompat="@drawable/botonrojo"
        tools:layout_editor_absoluteX="658dp"
        tools:layout_editor_absoluteY="648dp" />

    <ImageView
        android:id="@+id/pickColorGreen"
        android:layout_width="261dp"
        android:layout_height="133dp"
        app:srcCompat="@drawable/botonverde"
        tools:layout_editor_absoluteX="931dp"
        tools:layout_editor_absoluteY="651dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/pickColorLev1"
        android:paddingLeft="250dp"
        android:paddingTop="200dp"
        android:fontFamily="@font/Outfit-VariableFont_wght.ttf"

        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />
</androidx.constraintlayout.widget.ConstraintLayout>